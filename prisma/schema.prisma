generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum AgendaStatus {
  AVAILABLE
  BOOKED
  BLOCKED
}

model Agenda_slot {
  id          Int          @id @default(autoincrement())
  startTime   DateTime
  endTime     DateTime
  status      AgendaStatus @default(BOOKED)
  quirofanoId Int
  cirugiaId   Int?
  version     Int          @default(1)
  updatedAt   DateTime?     @updatedAt
}
