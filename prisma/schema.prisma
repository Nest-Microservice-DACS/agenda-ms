generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum ShiftStatus {
  AVAILABLE
  BOOKED
  BLOCKED
	@@map("AgendaStatus")
}

model Shift_slot {
  id          Int          @id @default(autoincrement())
  startTime   DateTime
  endTime     DateTime
  status      ShiftStatus @default(BOOKED)
  operatingRoomId Int
  surgeryId   Int?
  version     Int          @default(1)
  updatedAt   DateTime?     @updatedAt
	@@map("Agenda_slot")
}
